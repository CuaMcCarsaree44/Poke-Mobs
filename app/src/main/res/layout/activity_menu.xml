<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MenuActivity"
        android:background="@color/colorAccent"
        android:orientation="vertical"
>
    <TextView
            android:fontFamily="@font/pokemon_solid"
            android:text="Main Menu"
            android:textColor="#CCFFFF00"
            android:shadowColor="@color/fluentAccent"
            android:textSize="56sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
    />

    <View
        android:id="@+id/hr1"
        android:layout_marginTop="96dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="4dp"

        android:layout_alignParentTop="true"
        />

    <Button
            android:id="@+id/searchTile"
            android:background="@color/fluentAccent"
            android:text="Search Pokemon"
            android:textColor="#AAFFFFFF"
            android:textSize="16sp"
            android:fontFamily="@font/joystix_monospace"

            android:elevation="3dp"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1.5"
            android:shadowDy="1.3"

            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="105dp"
            android:layout_marginRight="5dp"
            android:layout_width="400dp"
            android:layout_height="30dp"
    />

    <Button
            android:id="@+id/customizeTile"
            android:background="@color/fluentAccent"
            android:text="Create Custom Card"
            android:textColor="#AAFFFFFF"
            android:textSize="16sp"
            android:fontFamily="@font/joystix_monospace"


            android:elevation="3dp"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1.5"
            android:shadowDy="1.3"

            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="145dp"
            android:layout_marginRight="5dp"
            android:layout_width="400dp"
            android:layout_height="30dp"
    />

    <Button
            android:id="@+id/aboutButton"
            android:background="@color/fluentAccent"
            android:text="About"
            android:textColor="#AAFFFFFF"
            android:textSize="16sp"
            android:fontFamily="@font/joystix_monospace"


            android:elevation="3dp"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1.5"
            android:shadowDy="1.3"

            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="185dp"
            android:layout_marginRight="5dp"
            android:layout_width="400dp"
            android:layout_height="30dp"
    />

    <Button
            android:id="@+id/logoutButton"
            android:background="@color/fluentAccent"
            android:text="Logout"
            android:textColor="#AAFFFFFF"
            android:textSize="16sp"
            android:fontFamily="@font/joystix_monospace"


            android:elevation="3dp"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1.5"
            android:shadowDy="1.3"

            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="225dp"
            android:layout_marginRight="5dp"
            android:layout_width="400dp"
            android:layout_height="30dp"
    />

    <Button
            android:id="@+id/exitButton"
            android:background="@color/fluentAccent"
            android:text="Exit"
            android:textColor="#AAFFFFFF"
            android:textSize="16sp"
            android:fontFamily="@font/joystix_monospace"


            android:elevation="3dp"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1.5"
            android:shadowDy="1.3"

            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="265dp"
            android:layout_marginRight="5dp"
            android:layout_width="400dp"
            android:layout_height="30dp"
    />


</RelativeLayout>